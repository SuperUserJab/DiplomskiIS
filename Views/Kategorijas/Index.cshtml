@model IEnumerable<DiplomskiISpoljoprivreda.Kategorija>

@{
    ViewBag.Title = "Index";
}

<h2>Registrovane kategorije udruženja</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Vrsta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cijena)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Detalji)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Vrsta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cijena)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Detalji)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.KategorijaID }) |
            @Html.ActionLink("Details", "Details", new { id=item.KategorijaID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.KategorijaID })
        </td>
    </tr>
}

</table>
